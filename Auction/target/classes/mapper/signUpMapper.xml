<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="signUpDAO">

	<select id="select" parameterType="signUpInsertDTO" resultMap="rsMap">
		SELECT a.email	<!-- member  / 사용자 이메일 -->
			 , a.pw		<!-- member  / 사용자 비밀번호 -->
			 , a.bitrh	<!-- member  / 사용자 생년월일 -->
			 , b.addr1	<!-- address / 사용자 우편번호-->
			 , b.addr2	<!-- address / 사용자 주소-->
			 , b.addr3	<!-- address / 사용자 상세주소 -->
			 , a.name	<!-- member  / 사용자 이름 -->
			 , a.tel	<!-- member  / 사용자 전화번호 -->
	 	  FROM member a, address b
		 WHERE a.#{id} = b.#{id}
		
	</select>

	<resultMap type="signUpInsertDTO" id="rsMap">
		<result property="email" column="email" />
		<result property="pw" column="pw" />
		<result property="bitrh" column="bitrh" />
		<result property="addr1" column="addr1" />
		<result property="addr2" column="addr2" />
		<result property="addr3" column="addr3" />
		<result property="name" column="name" />
		<result property="tel" column="tel" />
	</resultMap>

	<select id="selectAll" resultMap="rsMap">
		SELECT a.email,		<!-- member  / 사용자 이메일 -->
			 , a.pw			<!-- member  / 사용자 비밀번호 -->
			 , a.name		<!-- member  / 사용자 이름 -->
			 , a.tel		<!-- member  / 사용자 전화번호 -->
			 , a.bitrh		<!-- member  / 사용자 생년월일 -->
			 , b.account,	<!-- address  / 사용자 계좌 -->
			 , b.bank_name	<!-- address  / 사용자 은행명 -->
			 , c.place,		<!-- account  / 사용자 주소지 -->
			 , c.recipient	<!-- account  / 사용자 수령자 -->
			 , c.tel		<!-- account  / 사용자 전화번호 -->
			 , c.addr1		<!-- account  / 사용자 우편번호 -->
			 , c.addr2		<!-- account  / 사용자 주소 -->
			 , c.addr3		<!-- account  / 사용자 상세주소 -->
		  FROM member a, address b, account c, 
		 WHERE a.email = b.member_email
		   and a.email = c.member_email
	</select>

	<insert id="insert_member" parameterType="signUpInsertDTO">
		INSERT INTO member
		VALUES(#{email},#{pw},#{name},#{tel},#{bitrh})
	</insert>
 	<insert id="insert_address" parameterType="signUpInsertDTO">
		INSERT INTO address VALUES(#{email},#{place},#{recipient},#{tel},#{addr1},#{addr2},#{addr3})
	</insert>

	<update id="update" parameterType="signUpInsertDTO">
		UPDATE tablename1
		SET
		columnname1=#{param1}
		WHERE
		columnname2 = #{param2}
	</update>

	<delete id="delete" parameterType="signUpInsertDTO">
		DELETE FROM tablename1 WHERE
		columnname1 = #{param1}
	</delete>

</mapper>
